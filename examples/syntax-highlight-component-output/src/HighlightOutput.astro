---
import { Code } from '@astrojs/starlight/components';
import type { ComponentProps } from 'astro/types';

export type Props = Omit<ComponentProps<typeof Code>, 'lang' | 'code'>;

const html = await Astro.slots.render('default');

// If desired, work could be done on the rendered HTML here, e.g. formatting it to make it more readable, strip unwanted attributes etc.
---

<Code lang="html" code={html} {...Astro.props} />
